<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hystle.zach.moviediscover">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_256"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hystle.zach.moviediscover.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hystle.zach.moviediscover.ui.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.hystle.zach.moviediscover.ui.MainActivity"
            android:theme="@style/DetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hystle.zach.moviediscover.ui.MainActivity" />
        </activity>
        <activity
            android:name="com.hystle.zach.moviediscover.ui.ContentActivity"
            android:label="@string/title_activity_content"
            android:theme="@style/DetailTheme" />
        <activity
            android:name="com.hystle.zach.moviediscover.ui.SettingsActivity"
            android:parentActivityName="com.hystle.zach.moviediscover.ui.MainActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hystle.zach.moviediscover.ui.MainActivity" />
        </activity>
        <activity
            android:name="com.hystle.zach.moviediscover.ui.FinderActivity"
            android:parentActivityName="com.hystle.zach.moviediscover.ui.MainActivity"
            android:theme="@style/DetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hystle.zach.moviediscover.ui.MainActivity" />
        </activity>

        <activity android:name="com.hystle.zach.moviediscover.ui.CastActivity"
            android:theme="@style/DetailTheme">
        </activity>

        <provider
            android:name="com.hystle.zach.moviediscover.data.MovieProvider"
            android:authorities="com.hystle.zach.moviediscover"
            android:exported="false"
            android:syncable="true" />
    </application>

</manifest>